/**app.wxss**/
.page, page{
    height: 100vh;
    background: #ffffff;
}
.hy_tab {
    display: flex;
    height: 100%;
}
.hy_tab__item {
    position: relative;
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin:0 15rpx;
}
.hx_tab__item-on {
    font-size: 45rpx;
  }
.hy_tab__item-on:after {
    content: '';
    position: absolute;
    bottom: -10rpx;
    left: 80rpx;
    right: 80rpx;
    height: 1px;
    background: #f01414;
}

